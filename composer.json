{
    "name" : "RFP-Select-WP",
    "description": "Headless WordPress instance",
    "repositories":[
      {
        "type": "composer",
        "url": "https://wpackagist.org"
      },
      {
        "type": "package",
        "package":{
          "name": "wordpress",
          "type": "webroot",
          "version": "4.9.5",
          "dist":{
            "type": "zip",
            "url": "https://github.com/WordPress/WordPress/archive/4.9.5.zip"
          },
          "require":{
            "fancyguy/webroot-installer": "1.1.0"
          }
        }
      }
    ],
    "require":{
      "php": ">7.2",
      "wordpress": "4.9.5",
      "fancyguy/webroot-installer": "1.1.0",
      "wpackagist-theme/twentyseventeen": "1.3",
      "wpackagist-plugin/akismet": "4.0",
        "wpackagist-plugin/wp-cfm": "^1.4",
        "wpackagist-plugin/custom-post-type-ui": "^1.5",
        "wpackagist-plugin/advanced-custom-fields": "^5.6",
        "wpackagist-plugin/acf-to-rest-api": "^3.1"
    },
    "extra":{
      "webroot-dir": "wp",
      "webroot-package": "wordpress"
    }
  }
